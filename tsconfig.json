{
    "include": ["src/**/*"],
    "exclude": ["./dist/**"],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "rootDir": "./src",

        "checkJs": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "~/*": ["./src/*"]
        }
    }
}
